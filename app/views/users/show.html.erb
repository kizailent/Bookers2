<div class="container">
  <div class="row px-5 px-sm-0">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>

      <h2 class="mt-3">New Books</h2>
      <%= form_with model: @book, url: books_path do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_field :body %>
        </div>
        <%= f.submit "Create Book" %>
      <% end %>
    </div>
  </div>
</div>